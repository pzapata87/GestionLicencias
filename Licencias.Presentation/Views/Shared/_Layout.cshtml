<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Gestión de Licencias</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- Bootstrap 3.3.4 -->
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <!-- Font Awesome Icons -->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <!-- Ionicons -->
    <link href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css" rel="stylesheet" type="text/css" />
    
    
    @RenderSection("StyleContent", false)

    <!-- Theme style -->
    <link href="@Url.Content("~/Content/css/AdminLTE.min.css")" rel="stylesheet" type="text/css" />
    <!-- AdminLTE Skins. Choose a skin from the css/skins
         folder instead of downloading all of them to reduce the load. -->
    <link href="@Url.Content("~/Content/css/skins/_all-skins.min.css")" rel="stylesheet" type="text/css" />
    
    <link href="@Url.Content("~/Content/css/Site.css")" rel="stylesheet" type="text/css" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<!-- ADD THE CLASS layout-boxed TO GET A BOXED LAYOUT -->
<body class="skin-blue-light layout-boxed sidebar-mini">
    <!-- Site wrapper -->
    <div class="wrapper">

        <header class="main-header">
            <!-- Logo -->
            <a href="#" class="logo">
                <!-- mini logo for sidebar mini 50x50 pixels -->
                <span class="logo-mini"></span>
                <!-- logo for regular state and mobile devices -->
                <span class="logo-lg">
                    Gestión de Licencias
                </span>
            </a>
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top" role="navigation">
                <!-- Sidebar toggle button-->
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <!-- User Account: style can be found in dropdown.less -->
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="@Url.Content("~/Content/img/avatar.png")" class="user-image" alt="Administrador" />
                                <span class="hidden-xs">Administrador</span>
                            </a>
                            <ul class="dropdown-menu">
                                <!-- User image -->
                                <li class="user-header">
                                    <img src="@Url.Content("~/Content/img/avatar.png")" class="img-circle" alt="Administrador" />
                                </li>
                                <!-- Menu Footer-->
                                <li class="user-footer">
                                    <div class="pull-right">
                                        <a href="#" class="btn btn-default btn-flat">Cerrar Sesión</a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <!-- =============================================== -->
        <!-- Left side column. contains the sidebar -->
        <aside class="main-sidebar">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="@Url.Content("~/Content/img/logo_cabecera.png")" class="user-image" />
                    </div>
                </div>
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="@(ViewBag.Index == 1 ? "active" : "")"><a href="@Url.Action("Solicitud", "Fiscalizacion")"><i class="fa fa-edit"></i> <span>Solicitar Licencia</span></a></li>
                    <li class="@(ViewBag.Index == 2 ? "active" : "")"><a href="@Url.Action("Solicitud", "Fiscalizacion")"><i class="fa fa-edit"></i> <span>Evaluar Solicitud de Licencia</span></a></li>
                    <li class="@(ViewBag.Index == 3 ? "active" : "")"><a href="@Url.Action("Index", "Fiscalizacion")"><i class="fa fa-calendar"></i> <span>Actualizar Cronograma</span></a></li>
                    <li class="@(ViewBag.Index == 4 ? "active" : "")"><a href="@Url.Action("Fiscalizaciones", "Fiscalizacion")"><i class="fa fa-edit"></i> <span>Actualizar Fiscalización</span></a></li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>
        <!-- =============================================== -->
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            @RenderSection("HeaderContent", false)
            <!-- Main content -->
            <section class="content">
                @RenderBody()
            </section><!-- /.content -->
        </div><!-- /.content-wrapper -->
        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 1.0
            </div>
            <strong>Copyright &copy; 2015 </strong> All rights reserved.
        </footer>
    </div><!-- ./wrapper -->
    <!-- jQuery 2.1.4 -->
    <script src="@Url.Content("~/Content/js/jQuery/jQuery-2.1.4.min.js")"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
    <!-- AdminLTE App -->
    <script src="@Url.Content("~/Content/js/app.min.js")" type="text/javascript"></script>

    <script src="@Url.Content("~/Content/js/webApp.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function () {
            webApp.init();
        });
    </script>

    @RenderSection("ScriptContent", false)
</body>
</html>